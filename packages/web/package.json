{
  "name": "web",
  "version": "1.0.0",
  "private": true,
  "description": "Some notes",
  "keywords": [],
  "license": "MIT",
  "author": "Gustavo Harff <gustavo.harff@gmail.com>",
  "main": "./dist/main.js",
  "scripts": {
    "build": "npm-run-all build:electron build:react",
    "build:electron": "webpack --config webpack/electron.webpack.js --mode production",
    "build:react": "webpack --config webpack/react.webpack.js --mode production",
    "build:run": "npm-run-all build start:electron",
    "dev": "npm-run-all -p dev:react electron:serve",
    "dev:electron": "cross-env NODE_ENV=development webpack --config webpack/electron.webpack.js && npm run start:electron",
    "dev:react": "cross-env NODE_ENV=development webpack-dev-server --config webpack/react.webpack.js",
    "electron:serve": "wait-on http-get://localhost:4000/ && npm run dev:electron",
    "package": "npm-run-all build package:dist",
    "package:dist": "electron-builder --mac --publish never",
    "production:react": "cross-env NODE_ENV=production webpack-dev-server --config webpack/react.webpack.js",
    "start:electron": "electron ."
  },
  "dependencies": {
    "@unform/core": "2.1.3",
    "@unform/web": "2.1.3",
    "axios": "0.21.1",
    "css-loader": "4.3.0",
    "file-loader": "6.1.0",
    "framer-motion": "2.6.13",
    "html-webpack-plugin": "4.4.1",
    "polished": "3.6.6",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-icons": "3.11.0",
    "react-modal": "3.11.2",
    "react-router-dom": "5.2.0",
    "react-toastify": "6.0.8",
    "regenerator-runtime": "0.13.7",
    "style-loader": "1.2.1",
    "styled-components": "5.2.0",
    "yup": "0.29.3"
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@babel/plugin-transform-runtime": "7.11.5",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-react": "7.10.4",
    "@babel/preset-typescript": "7.10.4",
    "@svgr/webpack": "5.4.0",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/react": "16.9.49",
    "@types/react-dom": "16.9.8",
    "@types/react-modal": "3.10.6",
    "@types/react-router-dom": "5.1.5",
    "@types/styled-components": "5.1.3",
    "@types/yup": "0.29.7",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "babel-loader": "8.1.0",
    "cross-env": "7.0.3",
    "electron": "8.5.2",
    "electron-builder": "22.8.0",
    "electron-devtools-installer": "3.1.1",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.3",
    "eslint-plugin-react-hooks": "2.5.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "typescript": "3.9.7",
    "wait-on": "5.2.0",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  },
  "build": {
    "appId": "com.gustavoharff.one",
    "productName": "Private Notes",
    "copyright": "Copyright Â© 2020 Gustavo Harff",
    "files": [
      "dist/"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  }
}
